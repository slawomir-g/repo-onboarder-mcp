{
  "name": "repo-onboarder-mcp",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for analyzing Git repositories",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "rm -rf dist/src/prompts && mkdir -p dist/src && cp -r src/prompts dist/src/",
    "start": "node dist/src/index.js",
    "dev": "node --watch --experimental-strip-types src/index.ts",
    "inspector": "npx @modelcontextprotocol/inspector node dist/src/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:local": "tsx tests/local_run.ts",
    "lint": "biome check src",
    "format": "biome format src --write"
  },
  "keywords": [
    "mcp",
    "git",
    "ai",
    "gemini"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.0.1",
    "@toolprint/mcp-logger": "^0.0.7",
    "dotenv": "^17.2.3",
    "ignore": "^7.0.5",
    "isbinaryfile": "^5.0.7",
    "simple-git": "^3.27.0",
    "xml-js": "^1.6.11",
    "xmlbuilder2": "^4.0.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^22.5.5",
    "tsx": "^4.21.0",
    "typescript": "^5.5.3",
    "vitest": "^4.0.16"
  }
}
